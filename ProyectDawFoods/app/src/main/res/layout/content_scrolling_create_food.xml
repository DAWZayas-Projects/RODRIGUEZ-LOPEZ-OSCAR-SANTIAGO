<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.oscar.proyectdawfoods.RegisterLogin.ScrollingCreateFood"
    tools:showIn="@layout/activity_scrolling_create_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/scrolllUser"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:height="80dp"
            android:gravity="center"
            android:text="Name User"
            tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/nameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name User"
        android:layout_gravity="center"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/description"
        android:layout_gravity="center"
        tools:ignore="LabelFor"
        />


    <Button
        android:id="@+id/foodImage"
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_image_food"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        />

        <Button
            android:id="@+id/sendFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@color/colorPrimary"
            android:text="SEND"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
