<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.oscar.proyectdawfoods.RegisterLogin.DinamicRegister">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:id="@+id/staticInput"
        android:name="com.example.oscar.proyectdawfoods.RegisterLogin.InputLoginRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_input_login_register"
        tools:ignore="ObsoleteLayoutParam"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_marginTop="72dp"
        android:text="@string/login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/staticInput"
        style="@style/buttonBlue"/>
</RelativeLayout>

